@page "/transcribe"
@inject TranscriptionApiService ApiService

<PageTitle>Transcribe Audio</PageTitle>

<div class="transcribe-container">
    <h1>üéôÔ∏è Audio Transcription</h1>
    
    <div class="upload-section">
        <h3>Upload Audio File</h3>
        <p class="supported-formats">Supported formats: WAV, MP3, FLAC (max 50MB)</p>
        
        <div class="file-drop-zone @(isDragOver ? "drag-over" : "")"
             @ondragenter="HandleDragEnter"
             @ondragleave="HandleDragLeave"
             @ondragover:preventDefault>
            <InputFile OnChange="HandleFileSelected" accept=".wav,.mp3,.flac" />
            <div class="drop-zone-content">
                <span class="upload-icon">üìÅ</span>
                <p>Drag and drop your audio file here or click to browse</p>
            </div>
        </div>
        
        @if (!string.IsNullOrEmpty(selectedFileName))
        {
            <div class="selected-file">
                <span class="file-icon">üéµ</span>
                <span class="file-name">@selectedFileName</span>
                <span class="file-size">(@FormatFileSize(selectedFileSize))</span>
            </div>
            
            <button class="btn btn-primary btn-transcribe" @onclick="TranscribeAudio" disabled="@isProcessing">
                @if (isProcessing)
                {
                    <span class="spinner"></span>
                    <span>Processing...</span>
                }
                else
                {
                    <span>üöÄ Transcribe</span>
                }
            </button>
        }
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">
            ‚ö†Ô∏è @errorMessage
        </div>
    }

    @if (isProcessing)
    {
        <div class="processing-indicator">
            <div class="spinner-large"></div>
            <p>‚è≥ Transcribing audio... This may take a moment.</p>
            <p class="processing-note">Processing time depends on file length.</p>
        </div>
    }

    @if (transcriptionResult != null)
    {
        <div class="result-section">
            <h2>‚úÖ Transcription Complete</h2>
            
            <div class="result-meta">
                <div class="meta-item">
                    <strong>File:</strong> @transcriptionResult.Filename
                </div>
                <div class="meta-item">
                    <strong>Timestamp:</strong> @transcriptionResult.Timestamp
                </div>
            </div>

            <div class="result-text">
                <h3>Full Text</h3>
                <div class="text-content">
                    @transcriptionResult.Text
                </div>
            </div>

            @if (transcriptionResult.Segments != null && transcriptionResult.Segments.Length > 0)
            {
                <div class="segments-section">
                    <h3>Segments (@transcriptionResult.Segments.Length)</h3>
                    <div class="segments-list">
                        @foreach (var segment in transcriptionResult.Segments.Take(10))
                        {
                            <div class="segment">
                                <div class="segment-timestamp">
                                    [@FormatTime(segment.Start) - @FormatTime(segment.End)]
                                </div>
                                <div class="segment-text">@segment.Text</div>
                            </div>
                        }
                        @if (transcriptionResult.Segments.Length > 10)
                        {
                            <p class="more-segments">... and @(transcriptionResult.Segments.Length - 10) more segments</p>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private IBrowserFile? selectedFile;
    private string selectedFileName = string.Empty;
    private long selectedFileSize = 0;
    private bool isProcessing = false;
    private bool isDragOver = false;
    private string errorMessage = string.Empty;
    private TranscriptionResponse? transcriptionResult;

    private void HandleDragEnter()
    {
        isDragOver = true;
    }

    private void HandleDragLeave()
    {
        isDragOver = false;
    }

    private void HandleFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        selectedFileName = e.File.Name;
        selectedFileSize = e.File.Size;
        errorMessage = string.Empty;
        transcriptionResult = null;
        isDragOver = false;
    }

    private async Task TranscribeAudio()
    {
        if (selectedFile == null) return;

        isProcessing = true;
        errorMessage = string.Empty;
        transcriptionResult = null;
        StateHasChanged();

        try
        {
            transcriptionResult = await ApiService.TranscribeAsync(selectedFile);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }

    private string FormatTime(double seconds)
    {
        var ts = TimeSpan.FromSeconds(seconds);
        return ts.ToString(@"hh\:mm\:ss\.fff");
    }

    private string FormatFileSize(long bytes)
    {
        if (bytes < 1024) return $"{bytes} B";
        if (bytes < 1024 * 1024) return $"{bytes / 1024.0:F1} KB";
        return $"{bytes / (1024.0 * 1024.0):F1} MB";
    }
}

<style>
